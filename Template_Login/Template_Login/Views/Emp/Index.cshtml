@model Template_Login.Models.Loginmodel
@{
    ViewBag.Title = "Index";
}
<style>
    .error{
        color:red;
    }
</style>
<h1>Login Here</h1>

@using (Html.BeginForm("Index", "Emp", FormMethod.Post))
{
<div class="form-group">
    <label>Email</label>
    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @required = "required", @placeholder = "Enter Email.." })
    <div class="error">@TempData["invalid"]</div>
</div>
<div class="form-group">
    <label>Password</label>
    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @required = "required", @placeholder = "Enter Password.." })
<div class="error">@TempData["pass"]</div>
</div>
    <button type="submit" class="btn btn-success">Login</button>

}








